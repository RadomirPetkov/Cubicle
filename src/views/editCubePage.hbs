<main>
    <h1>Edit Cube</h1>
    <div class="form">
        <form method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{currentCube.name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{currentCube.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{currentCube.imageUrl}}">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" />
            <option value="1" {{#if currentCube.diffLevel1}} selected {{/if}}>1 - Very Easy</option>
            <option value="2" {{#if currentCube.diffLevel2}} selected {{/if}}>2 - Easy</option>
            <option value="3" {{#if currentCube.diffLevel3}} selected {{/if}}>3 - Medium (Standard 3x3)</option>
            <option value="4" {{#if currentCube.diffLevel4}} selected {{/if}}>4 - Intermediate</option>
            <option value="5" {{#if currentCube.diffLevel5}} selected {{/if}}>5 - Expert</option>
            <option value="6" {{#if currentCube.diffLevel6}} selected {{/if}}>6 - Hardcore</option>
            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>